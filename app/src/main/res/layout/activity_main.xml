<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 메뉴 레이아웃 -->

    <LinearLayout
        android:id="@+id/linearmenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/controller"
                android:layout_marginBottom="120dp"/>
            <TextView
                android:id="@+id/txtgotofirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="랜덤 로또"
                android:textSize="30sp"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/txtgotosecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다른 색깔 찾기"
                android:textSize="30sp"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/txtgotothird"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어떤 게임"
                android:textSize="30sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 첫 번째 레이아웃 -->

    <LinearLayout
        android:id="@+id/linearfirst"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnfirstlineargohome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOME"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtfirstlinearcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="로또 결과"
                android:textSize="30sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/makelotto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로또 번호 생성"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 두 번째 레이아웃 -->

    <LinearLayout
        android:id="@+id/linearsecond"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnsecondlineargohome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOME"
                android:textSize="20sp"/>
        </LinearLayout>
        <!-- 다른 색깔 찾기 게임-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:textSize="23sp"
                    android:layout_weight="1"
                    android:id="@+id/level"
                    android:textColor="#000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="23sp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:id="@+id/score"
                    android:textColor="#000" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/txt11"
                    android:layout_margin="5dp"
                    android:background="#000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/txt12"
                    android:layout_margin="5dp"
                    android:background="#000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/txt13"
                    android:layout_margin="5dp"
                    android:background="#000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/txt14"
                    android:layout_margin="5dp"
                    android:background="#000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/txt21"
                    android:layout_margin="5dp"
                    android:background="#000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/txt22"
                    android:layout_margin="5dp"
                    android:background="#000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/txt23"
                    android:layout_margin="5dp"
                    android:background="#000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/txt24"
                    android:layout_margin="5dp"
                    android:background="#000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/txt31"
                    android:layout_margin="5dp"
                    android:background="#000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/txt32"
                    android:layout_margin="5dp"
                    android:background="#000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/txt33"
                    android:layout_margin="5dp"
                    android:background="#000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/txt34"
                    android:layout_margin="5dp"
                    android:background="#000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/txt41"
                    android:layout_margin="5dp"
                    android:background="#000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/txt42"
                    android:layout_margin="5dp"
                    android:background="#000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/txt43"
                    android:layout_margin="5dp"
                    android:background="#000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/txt44"
                    android:layout_margin="5dp"
                    android:background="#000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:text="START"
                    android:background="#0066ff"
                    android:textColor="#fff"
                    android:textSize="35dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/start"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:text="EXIT"
                    android:background="#ffcc00"
                    android:textColor="#fff"
                    android:textSize="35dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/exit"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 세 번째 레이아웃 -->

    <LinearLayout
        android:id="@+id/linearthird"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnthirdlineargohome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOME"
                android:textSize="20sp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="세번째 레이아웃"
            android:textSize="30sp"
            android:gravity="center"/>\
    </LinearLayout>
</FrameLayout>